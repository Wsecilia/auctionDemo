<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxfh.auciton.dao.UserDao">

    <select id="userLogin" resultType="com.jxfh.auciton.pojo.User">
        SELECT
        uId,username,password,tel
        FROM user WHERE username=#{username} AND password=#{password}
    </select>

    <select id="countUsername" resultType="int">
        SELECT
        COUNT(uId)
        FROM user WHERE username=#{username}
    </select>

    <insert id="addUser">
        INSERT INTO "user"(username, password, tel) VALUE
        (#{username},#{password},#{tel})
    </insert>
</mapper>